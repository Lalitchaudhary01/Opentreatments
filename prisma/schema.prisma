enum InsuranceStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
}

// Insurance company model (role-based, admin approval)
model InsuranceCompany {
  id                 String          @id @default(cuid())
  userId             String          @unique
  user               User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name               String
  email              String          @unique
  contactPhone       String? // âœ… add this
  registrationNumber String? // optional
  logoUrl            String?
  description        String?
  provider           String?
  profile            Json?
  address            String?
  website            String?
  status             InsuranceStatus @default(PENDING)
  plans              Plan[]
  claims             Claim[]
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
}

// Insurance plans
model Plan {
  id        String           @id @default(cuid())
  companyId String
  company   InsuranceCompany @relation(fields: [companyId], references: [id], onDelete: Cascade)

  name            String
  description     String?
  coverageDetails Json // e.g., limits, tiers, exclusions
  premium         Float
  coverageAmount  Float // âœ… add this line

  claims Claim[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// User claims
model Claim {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyId String
  company   InsuranceCompany @relation(fields: [companyId], references: [id], onDelete: Cascade)

  planId String
  plan   Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)

  billDetails Json // uploaded bill, hospital, amount, procedure
  status      ClaimStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
